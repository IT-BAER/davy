<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default: no cleartext; rely on system CAs in release -->
    <base-config cleartextTrafficPermitted="false" />

    <!-- In debug builds, trust user-added CAs for inspection tools -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>

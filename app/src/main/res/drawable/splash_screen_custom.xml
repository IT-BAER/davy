<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    
    <!-- Logo at mid-top (30% from top) -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center_horizontal|top"
        android:top="120dp">
        <vector
            android:width="120dp"
            android:height="120dp"
            android:viewportWidth="108"
            android:viewportHeight="108">
            <path
                android:fillColor="#d3753b"
                android:pathData="M54,8C28.804,8 8,28.804 8,54s20.804,46 46,46 46,-20.804 46,-46S79.196,8 54,8z" />
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M44,28h18c15.464,0 26,11.536 26,26s-10.536,26 -26,26H44z" />
            <path
                android:fillColor="#39578a"
                android:pathData="M50,36h10c8.837,0 14,6.06 14,18s-5.163,18 -14,18H50z" />
            <path
                android:fillColor="#FFFFFFFF"
                android:fillAlpha="0.18"
                android:pathData="M28,40c0,-8.837 7.163,-16 16,-16h12c2.209,0 4,1.791 4,4s-1.791,4 -4,4H44c-4.418,0 -8,3.582 -8,8v20c0,2.209 -1.791,4 -4,4s-4,-1.791 -4,-4z" />
        </vector>
    </item>
    
    <!-- Loading spinner at bottom -->
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center_horizontal|bottom"
        android:bottom="80dp">
        <vector
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="48"
            android:viewportHeight="48">
            
            <!-- Orange arc -->
            <path
                android:strokeColor="#d3753b"
                android:strokeWidth="4"
                android:strokeLineCap="round"
                android:pathData="M 24,4 A 20,20 0 1,1 4,24"
                android:fillColor="@android:color/transparent" />
            
            <!-- Blue arc -->
            <path
                android:strokeColor="#39578a"
                android:strokeWidth="4"
                android:strokeLineCap="round"
                android:pathData="M 44,24 A 20,20 0 1,1 24,44"
                android:fillColor="@android:color/transparent" />
        </vector>
    </item>
</layer-list>

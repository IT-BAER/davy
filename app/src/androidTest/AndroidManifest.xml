<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application>
        <!--
            Disable all App Startup initializers for instrumented tests.
            WorkManagerSetupInitializer uses EntryPointAccessors.fromApplication()
            which crashes before HiltAndroidRule has set up the component.
        -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="remove" />
    </application>
</manifest>
